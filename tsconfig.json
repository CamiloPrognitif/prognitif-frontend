{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@state/*": ["state/*"],
      "@theme/*": ["theme/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@features/*": ["features/*"],
      "@navigation/*": ["navigation/*"]
    }
  },
  "include": ["declarations.d.ts", "src/**/*", "App.tsx"]
}
